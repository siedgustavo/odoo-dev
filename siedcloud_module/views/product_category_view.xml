<?xml version="1.0" ?>
<odoo>
    <record id="product_category_form_view" model="ir.ui.view">
        <field name="name">product_category.form.view</field>
        <field name="model">product_category</field>
        <field name="arch" type="xml">
            <form string="Categorias de Productos">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="product_type_id" />
                            <field name="description" />
                            <field name="state" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="product_category_tree_view" model="ir.ui.view">
        <field name="name">product_category.tree.view</field>
        <field name="model">product_category</field>
        <field name="arch" type="xml">
            <tree string="Categorias de Productos">
                <field name="name" />
                <field name="product_type_id" />
                <field name="description" />
                <field name="state" />
            </tree>
        </field>
    </record>
</odoo>